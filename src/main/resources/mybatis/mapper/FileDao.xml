<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.intranet.dao.IFileDao">

    <insert id="insert" useGeneratedKeys="true" parameterType="com.example.intranet.dto.FileDto" keyProperty="fidx">
        insert into file (originalname, path, size) values (#{originalname}, #{path}, #{size})
    </insert>

    <select id="getFile" resultType="com.example.intranet.dto.FileDto">
        select * from file where fidx = #{image}
    </select>

</mapper>